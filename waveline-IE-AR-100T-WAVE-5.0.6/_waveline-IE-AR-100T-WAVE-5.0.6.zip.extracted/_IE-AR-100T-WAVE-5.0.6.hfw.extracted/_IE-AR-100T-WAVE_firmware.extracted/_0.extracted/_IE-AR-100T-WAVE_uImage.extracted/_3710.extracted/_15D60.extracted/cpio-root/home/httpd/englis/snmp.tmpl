function addEntry() {
  var ip=document.snmpForm.trapsink.value;

  if((ip.length != 0) && isValidIP(ip)) {
    var entry=new Option(ip, false, false);
    document.snmpForm.sink_list.options[document.snmpForm.sink_list.length]=entry;
    document.snmpForm.sinklist.value=document.snmpForm.sinklist.value + ip + " ";
  } else {
    alert("Please insert a proper host address!");
    document.snmpForm.trapsink.focus();
  }
}

function delEntry() {
  if(document.snmpForm.sink_list.selectedIndex != -1) {
    var index=document.snmpForm.sink_list.selectedIndex;
    var nets=document.snmpForm.sinklist.value;
    var netArray=nets.split(" ");
    var newnets=""
    for (i=0; i<document.snmpForm.sink_list.length; ++i) {
      if (i != index) newnets = newnets + netArray[i] + " ";
    }
    document.snmpForm.sink_list.options[index]=null;
    document.snmpForm.sinklist.value=newnets;
  } else {
    alert("Please choose an entry to delete!");
  }
