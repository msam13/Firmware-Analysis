<script type="text/javascript">

function setdisabled(cb)
{
    var c0=  ! document.ospfForm.ospf_service.checked;
    var c1=  c0 || ! document.ospfForm.if1.checked;
    var c2=  c0 || ! document.ospfForm.if2.checked;
  
    if (cb==0) {
        document.ospfForm.rname.disabled = c0;
        document.ospfForm.authkey.disabled = c0;
        document.ospfForm.ospf_static.disabled = c0;
        document.ospfForm.Zebra_Pass.disabled = c0;
        document.ospfForm.Zebra_PassRe.disabled = c0;
        document.ospfForm.prio1.disabled = c0;
        document.ospfForm.if1.disabled = c0;
        document.ospfForm.if2.disabled = c0;
    }
    if (cb==0 || cb==1) {
        document.ospfForm.hello1.disabled = c1;
        document.ospfForm.dead1.disabled = c1;
        document.ospfForm.nettyp1.disabled = c1;
    }
    if (cb==0 || cb==2) {
        document.ospfForm.hello2.disabled = c2;
        document.ospfForm.dead2.disabled = c2;
        document.ospfForm.nettyp2.disabled = c2;
   }
}

function checkValues()
{
    if(document.ospfForm.ospf_service.checked) {
        if(document.ospfForm.rname.value.length <= 0) {
            alert("Bitte einen Namen einf&uuml;gen!");
            document.ospfForm.rname.focus();
            return false;
        }
        if(document.ospfForm.authkey.value.length <= 0) {
            alert("Bitte einen AuthentifzierungsschlÃ¼ssel einf&uuml;gen!");
            document.ospfForm.authkey.focus();
            return false;
        }

        area1_prio=document.ospfForm.prio1.value;
        if(isNaN(area1_prio) || (area1_prio < 0) || (area1_prio > 255)) {
            alert("Die Priorit&auml;t muss zwischen 0 und 255 liegen!");
            document.ospfForm.prio1.focus();
            return false;
        }
    }

    document.ospfForm.submit();
}

function chooseDiv(number)
{
    for (i=1;i<3;i++) {
      document.getElementById(String(i)).style.display = (i==number) ? "inline" : "none";
      document.body.id=(i==number) ? "tab"+number : document.body.id;
    }
}

//-->
</script>
