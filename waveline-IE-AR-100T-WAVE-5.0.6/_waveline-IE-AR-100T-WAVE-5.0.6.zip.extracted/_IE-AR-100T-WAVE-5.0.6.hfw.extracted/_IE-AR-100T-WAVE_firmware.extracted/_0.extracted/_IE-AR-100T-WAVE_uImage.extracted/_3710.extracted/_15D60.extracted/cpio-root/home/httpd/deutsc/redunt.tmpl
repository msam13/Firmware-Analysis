</script>
</head>
<body onload="setdisabled();">
<form action="config.cgi" method="post" target="Main" name="rdialForm">
  <input type="hidden" name="lang" value="deutsc">
  <input type="hidden" name="item" value="41">
  <input type="hidden" name="act" value="1">
<table><tr>
  <td><select name="redunt_typ" onchange="setdisabled();">
    <option value="none" {TYP0}>keine Redundanz</option>
    <option value="simple" {TYP1}>einfache Redundanz</option>
    <option value="peer" {TYP2}>Peer</option>
    <option value="target" {TYP3}>Target</option>
    </select>
  </td><td>Redundanz-Typ</td>
</tr></table>
<fieldset><legend>Redundanz</legend>
  <table>
  <tr>
    <td>Schnittstelle</td>
    <td><select name="rdialif"><option value="eth0" {IFSEL0}>LAN</option><option value="eth1" {IFSEL1}>WAN</option></select>
    </td>
    <td>zu &uuml;berwachende Schnittstelle</td>
  </tr>
  <tr>
    <td>Dialout-Router</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_ip" value="{REDUNT_IP}"></td>
    <td>IP-Addresse des Routers, bei dem Dialout veranlasst werden soll</td>
  </tr>
  <tr>
    <td>Port</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_port" value="{REDUNT_PORT}"></td>
    <td>Port der Gegenstelle</td>
  </tr>
  <tr>
    <td>Passwort</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_pass" value=""></td>
    <td>Passwort</td>
  </tr>
  <tr>
    <td>Parallelredundanz</td>
    <td><select name="rextended">
      <option value="none" {EXT0}>keine</option>
      <option value="recessive" {EXT1}>rezessive</option>
      <option value="dominant" {EXT2}>dominante</option>
    </td>
    <td>&nbsp;</td>
  </tr>
  </table>
</fieldset>
<fieldset><legend>Erweiterte Redundanz</legend>
  <table>
  <tr>
    <td>IP-Adresse</td>
    <td><input type="text" size="15" maxlength="25" name="rex_ip" value="{REDUNT_REMOTE_CONTROL}"></td>
    <td>des zu &uuml;berwachenden Routers (Target)</td>
  </tr>
  <tr>
    <td>Port</td>
    <td><input type="text" size="15" maxlength="25" name="rex_port" value="{REDUNT_EX_PORT}"></td>
    <td>des Targets</td>
  </tr>
<!--
  <tr>
    <td>Intervall</td>
    <td><input type="text" size="15" maxlength="25" name="rex_int" value="{REDUNT_EX_INT}"></td>
    <td>Zeit zwischen zwei Kommunikationsversuchen (in Sekunden)</td>
  </tr>
  <tr>
    <td>Max. Fehlversuche</td>
    <td><input type="text" size="15" maxlength="25" name="rex_max" value="{REDUNT_EX_MAX}"></td>
    <td>Anzahl fehlgeschlagener Kommunikationsversuche vor Dialout</td>
  </tr>
-->
  </table>
</fieldset>
<table align="right">
    <tr>
      <td><input type="reset" name="Cancel_Button" value="Abbrechen"></td>
      <td><input type="button" name="OK_Button" value="&Uuml;bernehmen" onclick="checkValues()"></td>
    </tr>
</table>
</form>
</body>
</html>
