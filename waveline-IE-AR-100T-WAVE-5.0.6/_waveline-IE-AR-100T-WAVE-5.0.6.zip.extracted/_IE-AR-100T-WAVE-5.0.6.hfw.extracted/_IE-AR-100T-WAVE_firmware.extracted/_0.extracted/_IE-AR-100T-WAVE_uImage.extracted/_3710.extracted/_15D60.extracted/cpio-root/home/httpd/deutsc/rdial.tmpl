<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<meta name="author" content="Enrico Kalliwoda">
<meta name="description" content="English toc-page of the IAR / Heyfra GmbH">
<meta name="date" content="2007-05-15 11:00:00">
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-store">
<meta http-equiv="expires" content="0">
<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
<title>Redundant Dialout</title>
<link rel="stylesheet" type="text/css" href="css/stile.css" media="screen">
<script src="deutsc/auxfunc.js" type="text/javascript"></script>
<script type="text/javascript">
<!--

function addEntry() {
  var ip = document.rdialForm.rdial_ip.value;
  var ipo = new Option(ip,ip,false,false);

  document.rdialForm.ip_list.options[document.rdialForm.ip_list.length] = ipo;
  document.rdialForm.iplist.value = document.rdialForm.iplist.value + ip + " ";
}

function delEntry() {
  if(document.rdialForm.ip_list.selectedIndex != -1) {
    var index=document.rdialForm.ip_list.selectedIndex;
    var ipl=document.rdialForm.iplist.value;
    var ipArray=ipl.split(" ");
    var newip="";
    for (i=0; i<document.rdialForm.ip_list.length; ++i) {
      if (i != index) {
        newip = newip + ipArray[i] + " ";
      }
    }
    document.rdialForm.ip_list.options[index] = null;
    document.rdialForm.iplist.value = newip;
  } else {
    alert("Bitte waehlen Sie die zu loeschenden Gegenstellen!");
  }
}

function setdisabled() {
  var s0=document.rdialForm.rdial_dout.checked;
  // disable inputs:
  document.rdialForm.ip_list.disabled = document.rdialForm.rdial_pass.disabled =
  document.rdialForm.Add_Button.disabled = document.rdialForm.Del_Button.disabled =
  document.rdialForm.rdial_ip.disabled = document.rdialForm.rdial_port.disabled = !s0;
}

function checkValues() {
  var result=true;
  if(result==true) document.rdialForm.submit();
}

//-->
</script>
</head>
<body onload="setdisabled();">
<form action="config.cgi" method="post" target="Main" name="rdialForm">
  <input type="hidden" name="lang" value="deutsc">
  <input type="hidden" name="item" value="42">
  <input type="hidden" name="act" value="1">
<table><tr>
  <td><input type="checkbox" name="rdial_dout" value="yes" onclick="setdisabled();" {RDIALSTATE}></td><td>Redundanz-Dialout aktivieren</td>
</tr></table>
<fieldset><legend>Redundantes Dialout</legend>
  <table>
  <tr>
    <td>Port</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_port" value="{RDIAL_PORT}" {ALLOW}></td>
    <td>Port auf diesem Router</td>
  </tr>
  <tr>
    <td>Kennwort</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_pass" value="" {ALLOW}></td>
    <td>Kennwort zum Anmelden</td>
  </tr>
   <tr>
    <td>Redundanz-Router</td>
    <td><input type="text" size="15" maxlength="25" name="rdial_ip" {ALLOW}></td>
    <td>IP-Adresse eines anfordernden Routers (Gegenstelle)</td>
  </tr>
  <tr>
    <td>
      <input type="button" name="Add_Button" value="Hinzuf&uuml;gen" onclick="addEntry()" {ALLOW}></td>
  </tr>
  </table>
  <hr>
  <h4>Liste der Gegenstellen</h4>
  <table>
  <tr>
    <td> <select name="ip_list" size="5" {ALLOW}> {IPOPTS}
      </select> </td>
    </tr><tr><td colspan="2">
      <input type="hidden" name="iplist" value="{IPLIST}">
      <input type="button" name="Del_Button" value="L&ouml;schen" onclick="delEntry()" {ALLOW}>
    </td>
  </tr>
</fieldset>
<table align="right">
    <tr>
      <td><input type="reset" name="Cancel_Button" value="Abbrechen"></td>
      <td><input type="button" name="OK_Button" value="&Uuml;bernehmen" onclick="checkValues()"></td>
    </tr>
</table>
</form>
</body>
</html>
