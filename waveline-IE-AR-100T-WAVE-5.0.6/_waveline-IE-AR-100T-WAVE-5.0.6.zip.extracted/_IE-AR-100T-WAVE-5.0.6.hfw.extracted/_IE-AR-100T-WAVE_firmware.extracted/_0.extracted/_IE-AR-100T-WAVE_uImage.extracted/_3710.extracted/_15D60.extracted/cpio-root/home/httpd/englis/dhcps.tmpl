

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<meta name="author" content="W.-R. Juergens">
<meta name="date" content="2006-11-14 05:00:00">
<meta http-equiv="expires" content="0">
<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
<meta http-equiv="cache-control" content="no-store">
<meta http-equiv="pragma" content="no-cache">
<title>DHCP-Server Konfiguration</title>
<link rel="stylesheet" type="text/css" href="css/stile.css" media="screen">
<script src="englis/auxfunc.js" type="text/javascript"></script>
<script type="text/javascript">

function checkState() {
  if(document.DhcpForm.dhcps_interface.options[0].selected == true) {
    document.DhcpForm.dhcpfromaddr.disabled=true;
    document.DhcpForm.dhcptoaddr.disabled=true;
    document.DhcpForm.dhcpmask.disabled=true;
    document.DhcpForm.dhcplease.disabled=true;
    document.DhcpForm.dhcpdns.disabled=true;
    document.DhcpForm.dhcpgateway.disabled=true;
  } else {
    document.DhcpForm.dhcpfromaddr.disabled=false;
    document.DhcpForm.dhcptoaddr.disabled=false;
    document.DhcpForm.dhcpmask.disabled=false;
    document.DhcpForm.dhcplease.disabled=false;
    document.DhcpForm.dhcpdns.disabled=false;
    document.DhcpForm.dhcpgateway.disabled=false;
  }
}

function checkValues() {
  if (isNaN(document.DhcpForm.dhcplease.value) || parseInt(document.DhcpForm.dhcplease.value) < 1) {
    alert("Please insert a lease time of 1 hour at least!");
    document.DhcpForm.dhcplease.focus();
    return false;
  }
  document.DhcpForm.submit();
}

//-->
</script>
</head>
<body>
<form action="config.cgi" method="post" target="Main" name="DhcpForm">
  <input type="hidden" name="lang" value="englis">
  <input type="hidden" name="item" value="37">
  <input type="hidden" name="act"  value="1">
    <fieldset><legend>DHCP</legend>
    <table>
<TR>
    <td><label for="dhcps_interface">Interface</label></TD>
    <TD>
      <select name="dhcps_interface" size="1" onchange=checkState()> {INTERFACE_OPTS}
      </select>
    </td>
    <td>interface to the network the IP addresses should distributed for</td>
</TR>
<tr>
    <td>Address range from</td>
    <td><input type="text" size="15" maxlength="15" name="dhcpfromaddr" value="{DHCPFROMADDR}" {DHCPSENABLE}></td>
    <td>lower range boundary of IP addresses to distribute</td>
</tr>
<tr>
    <td>Address range to</td>
    <td><input type="text" size="15" maxlength="15" name="dhcptoaddr" value="{DHCPTOADDR}" {DHCPSENABLE}></td>
    <td>upper range boundary of IP addresses to distribute</td>
</tr>
<tr>
    <td>Net mask</td>
    <td><input type="text" size="15" maxlength="15" name="dhcpmask" value="{DHCPMASK}" {DHCPSENABLE}></td>
    <td>net mask of distributed IP addresses</td>
</tr>
<tr>
    <td>Lease time</td>
    <td><input type="text" size="15" name="dhcplease" value="{DHCPLEASE}" {DHCPSENABLE}></td>
    <td>validity period of distributed IP addresses (hours)</td>
</tr>
<tr><TD colspan="3">&nbsp;</TD></tr>
<tr>
    <td>Name server</td>
    <td><input type="text" size="15" maxlength="15" name="dhcpdns" value="{DHCPDNS}" {DHCPSENABLE}></td>
    <td>name server to distribute with the IP address</td>
</tr>
<tr>
    <td>Gateway</td>
    <td><input type="text" size="15" maxlength="15" name="dhcpgateway" value="{DHCPGATEWAY}" {DHCPSENABLE}></td>
    <td>gateway to distribute with the IP address</td>
</tr>
</table>

</fieldset>
  <table align="right">
<tr>
  <td><input type="reset" name="Cancel_Button" value="Cancel"></td>
  <td><input type="button" name="OK_Button" value="Apply" onclick="checkValues()"></td>
</tr>
   </table>
</form>
</body>
</html>
